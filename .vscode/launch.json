{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Django Backend",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/octofit-tracker/backend/manage.py",
      "args": ["runserver", "localhost:8000"],
      "django": true,
      "justMyCode": true,
      "python": "${workspaceFolder}/octofit-tracker/backend/venv/Scripts/python.exe",
      "env": {
        "CODESPACE_NAME": "${env:CODESPACE_NAME}",
        "PYTHONPATH": "${workspaceFolder}/octofit-tracker/backend/venv/Scripts/python.exe",
        "VIRTUAL_ENV": "${workspaceFolder}/octofit-tracker/backend/venv",
        "PATH": "${workspaceFolder}/octofit-tracker/backend/venv/Scripts;${env:PATH}"
      }
    },
    {
      "name": "Launch React Frontend",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/octofit-tracker/frontend/node_modules/react-scripts/scripts/start.js",
      "cwd": "${workspaceFolder}/octofit-tracker/frontend",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["start"],
      "port": 3000,
      "env": {
        "REACT_APP_CODESPACE_NAME": "${env:CODESPACE_NAME}"
      }
    },
    {
      "name": "API Test",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/octofit-tracker/frontend/node_modules/.bin/curl",
      "args": ["http://localhost:8001/api/"],
      "cwd": "${workspaceFolder}/octofit-tracker/frontend",
      "env": {
        "REACT_APP_CODESPACE_NAME": "${env:CODESPACE_NAME}"
      }
    }
  ]
}